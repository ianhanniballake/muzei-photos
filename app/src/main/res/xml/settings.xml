<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="prefsDisplay"
        app:title="@string/pref_group_display"
        >
        <ListPreference
            app:key="prefTheme"
            app:title="@string/pref_theme"
            app:entries="@array/pref_themes"
            app:entryValues="@array/prefThemeValues"
            app:defaultValue="@integer/prefDefaultTheme"
            app:dialogTitle="@string/pref_choose_theme"
            app:useSimpleSummaryProvider="true"
            />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
